<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bluebrains.Activity.FragmentSubmitOrder">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout2"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:id="@+id/check_out_btn"
            android:textSize="18sp"
            android:background="@layout/rounded_button"
            android:textColor="@color/textColorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/submit_order_radioGroup"
            android:layout_alignStart="@+id/submit_order_radioGroup"
            android:layout_alignRight="@+id/submit_order_radioGroup"
            android:layout_alignEnd="@+id/submit_order_radioGroup" />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/relativeLayout2"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/submit_order_radioGroup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Payment Method"
                android:id="@+id/submit_order_pay_text"
                android:layout_above="@+id/relativeLayout2"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="On Catch"
                android:id="@+id/submit_order_radio1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checked="true"
                android:layout_marginTop="12dp" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="PayPal"
                android:id="@+id/submit_order_radio2"
                android:layout_below="@+id/submit_order_radio1"
                android:layout_alignLeft="@+id/submit_order_radio1"
                android:layout_alignStart="@+id/submit_order_radio1"
                android:checked="false" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Take Out"
                android:id="@+id/submit_order_radio3"
                android:layout_below="@+id/submit_order_radio2"
                android:layout_centerHorizontal="true"
                android:checked="false" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Coast: 0.0"
            android:id="@+id/submit_oder_total_coast"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/submit_order_radioGroup"
            android:layout_alignLeft="@+id/submit_order_radioGroup"
            android:layout_alignStart="@+id/submit_order_radioGroup" />
    </RelativeLayout>

</RelativeLayout>
